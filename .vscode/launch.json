{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch DMPC",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp/bin/run",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/cpp/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "incremental-build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
